<% if (locals.isAuthenticated) { %>
  <h1>New</h1>
  <div class="container">
    <div class="row content">
      <div class="col-md-7">
        <div class="mapEdit" id="map" data-lat="51.515209" data-lng="-0.072132"></div>
      </div>
    <div class="col-md-5">
      <form method="POST" action="/trips">
        <div class="field col-md-5">
          <label class="label" for="latitude">Latitude</label>
          <p class="control col-md-5">
            <input class="input" type="text" name="latitude" id="latitude" value="" readonly>
          </p>
        <div class="field">
          <label class="label" for="title">Longitude</label>
          <p class="control">
            <input class="input" type="text" name="longitude" id="longitude" value="" readonly>
          </p>
        <div class="field">
          <label class="label" for="title">Title</label>
          <p class="control">
            <input class="input" type="text" name="title" id="title" value="">
          </p>
        </div>
        <div class="field">
          <label class="label" for="image">Image</label>
          <label class="button is-primary" for="image">Choose file</label>
          <input type="file" name="image" id="image" hidden>
        </div>
        <div>
          <label class="label" for="fallType">Fall Type</label>
          <label>
              Trip <input type="radio" checked name="fallType" value="trip">
              Slip <input type="radio" name="fallType" value="slip">
              Stumble <input type="radio" name="fallType" value="stumble">
              Tumble <input type="radio" name="fallType" value="tumble">
              Fall <input type="radio" name="fallType" value="fall">
          </label>
        <div class="field">
          <label class="label"for="desription">Tell us about your trip</label>
          <textarea class="input" type="text" name="description" id="description"></textarea>
        </div>
        <button class="button">Post</button>
      </form>
      </div>
    </div>
  </div>
  <% } else { %>
    <div class="home">
      <h1><a href="/login">Log in</a> to have access to this content </h1>
    </div>
  <% } %>
